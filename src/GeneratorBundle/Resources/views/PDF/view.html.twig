<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>PDF</title>
    <style>
        body{
            margin-bottom: 150px;
        }
        table,tbody,thead{
            display: block;
            width:100%;
            border-collapse: collapse;
            outline: none;

        }
        table{
            margin: 20px 0;
        }
        h1{
            margin:60px 0px 50px 0px;
        }
        h2{
            margin:30px 0px 30px 0px;
        }

        img{
            display:block;
            width:50%;
            margin:5px auto;
        }

        tr{
            width:100%;
            display: block;
            margin:0;
            padding:0;
        }
        thead tr td{
            text-align: center;
            background: rgb(0,180,241);
            border-bottom: 1px solid black;
            line-height:50px;
            border-top:1px solid black;
        }
        td{
            display: inline-block;
            box-sizing: border-box;
            border-right:1px solid black;
            padding-left:5px;
            width:48%;
            min-height:50px;
            outline: none;
            margin:0;
            -ms-word-wrap: break-word;
            word-wrap: break-word;
        }
        td:first-child{
            border-left:1px solid black;
        }
    </style>
</head>
<body>
{{ html | raw }}

</body>
</html>