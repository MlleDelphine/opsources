                                <div class="col-md-6">{{ form_row(formOpusCampaign.limitDate) }}</div>
                                <div class="col-md-6">{{ form_row(formOpusCampaign.status) }}</div>
                                {#{{ form_row(formOpusCampaign.type) }}#}
                                <div class="col-md-6">{{  form_row(formOpusCampaign.opusTemplate) }}</div>
                                <input type="submit" value="Créer" class="btn success pull-right btn-lg">
                                {{ form_end(formOpusCampaign) }}
                            </div>
                        </div>
                    </div>
