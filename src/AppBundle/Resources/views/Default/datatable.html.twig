{% extends 'AppBundle::layout.html.twig' %}
{% block body %}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Tableau de bord</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-success">
            <div class="panel-heading">
                <i class="fa {{ icon }} fa-fw"></i> {{ title }}
                <div class="pull-right">
                    <div class="btn-group">
                        <button data-toggle="dropdown" class="btn btn-default btn-xs dropdown-toggle" type="button" aria-expanded="true">
                            Actions
                            <span class="caret"></span>
                        </button>
                        <ul role="menu" class="dropdown-menu pull-right">
                            <li><a href="{{ path((createRouteName)) }}">Cr√©er</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="panel-body tabbable-custom">
                {{ addDataTable(dataTable, {
                    'path':          path( (routeName), {'tableName':'meetDataTable'}),
                    'id':            'meetDataTable',
                    'bLengthChange': 1,
                    'bInfo':         1,
                    'bFilter':       1,
                    'language': {
                        'url': (asset('vendor/datatables-plugins/i18n/French.lang'))
                    }

                }) }}
            </div>
        </div>
    </div>

    {% endblock %}

    {% block javascripts %}
        {{ parent() }}

    {%  endblock %}



