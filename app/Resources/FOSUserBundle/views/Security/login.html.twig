{% extends "@custom_fos/layout.html.twig" %}

{% block fos_user_content %}
    <form action="{{ path("fos_user_security_check") }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        <h3 class="form-title">Connexion</h3>
        {% if error %}
            <div class="alert alert-danger display-hide">
                <button class="close" data-close="alert"></button>
			<span>
			{{ error|trans({}, 'FOSUserBundle') }} </span>
            </div>
        {% endif %}

        <div class="form-group">
            <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
            <label for="username" class="control-label visible-ie8 visible-ie9">Identifiant : </label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control form-control-solid placeholder-no-fix" placeholder="Identifiant"/>
        </div>
        <div class="form-group">
            <label for="password" class="control-label visible-ie8 visible-ie9">Mot de passe : </label>
            <input type="password" id="password" name="_password" required="required" class="form-control form-control-solid placeholder-no-fix" placeholder="Mot de passe"/>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-login uppercase">Se connecter</button>
        </div>

        <div class="create-account">
            <p>
                <label class="rememberme check" for="remember_me">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    Garder la session active </label>
            </p>
        </div>
    </form>
{% endblock fos_user_content %}