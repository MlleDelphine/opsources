name: "Entretien sur les conditions de travail"
id: "conditions_meet"
fields:
    attr:
        - id: "cond_workconditions"
          type: "collection"
          conf:
              allow_add: true
              type: "to defined"
              allow_delete: true
              by_reference: false
              required: false
              label: "Le salarié est-il satisfait de :"
              attr:
                  data-tab: "tab_2"
                  data-access: "evaluator"
          child:
              - id: "cond_workconditions_name"
