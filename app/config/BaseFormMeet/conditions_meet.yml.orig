                conf:
                    label: "Conditions"
                    required: false
                    attr:
                        data-tab: "tab_2"
                        readonly: true
              - id: "cond_workconditions_evaluation"
                type: "choice"
                conf:
                    label: "Note"
                    choices: { 1: "1", 2: "2", 3: "3", 4: "4", 0: "Pas d'avis"}
